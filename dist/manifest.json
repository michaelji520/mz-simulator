{
  "name": "mz-simulator",
  "description": "",
  "version": "1.6",
  "manifest_version": 3,
  "icons": {
    "16": "./icon-16/simulator-open.png",
    "32": "./icon-32/simulator-open.png",
    "64": "./icon-64/simulator-open.png",
    "128": "./icon-128/simulator-open.png"
  },
  "action": {
    "default_icon": "./icon-32/simulator-open.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "scripting", "storage", "declarativeNetRequest", "declarativeNetRequestFeedback", "webNavigation"],
  "host_permissions": [
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.svg"],
      "matches": ["*://*/*"]
    }
  ]
}
